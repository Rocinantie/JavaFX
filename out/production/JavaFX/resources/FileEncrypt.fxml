<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.FileEncryptController">

    <ImageView fitHeight="300.0" fitWidth="300.0" layoutX="11.0" layoutY="14.0" pickOnBounds="true"
               preserveRatio="true">
        <Image url="@BG.jpg"/>
    </ImageView>

    <Separator layoutY="325.0" prefHeight="10.0" prefWidth="600.0"/>

    <Separator layoutX="155.0" layoutY="160.0" prefHeight="10.0" prefWidth="330.0" rotate="90.0"/>

    <Button layoutX="356.0" layoutY="71.0" mnemonicParsing="false" onAction="#btnSelectFile" prefHeight="30.0"
            prefWidth="80.0" text="选择文件">
        <font>
            <Font name="Sarasa UI SC Bold" size="13.0"/>
        </font>
    </Button>

    <Button layoutX="484.0" layoutY="348.0" mnemonicParsing="false" onAction="#btnReturnClick" prefHeight="30.0"
            prefWidth="80.0" text="返回">
        <font>
            <Font name="Sarasa UI SC Bold" size="13.0"/>
        </font>
    </Button>

    <Label contentDisplay="CENTER" layoutX="45.0" layoutY="340.0" prefHeight="46.0" prefWidth="230.0"
           text="All Rights Reserved @ Rocinante 2020-2020" wrapText="true">
        <font>
            <Font name="System Italic" size="14.0"/>
        </font>
    </Label>

    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="320.0" layoutY="14.0" prefHeight="40.0" prefWidth="280.0"
           text="欢迎使用文件加密模块" textAlignment="RIGHT">
        <font>
            <Font name="System Italic" size="24.0"/>
        </font>
    </Label>

    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="340.0" layoutY="200.0" prefHeight="30.0" prefWidth="95.0"
           text="加密结果：" textAlignment="RIGHT">
        <font>
            <Font name="System Italic" size="18.0"/>
        </font>
    </Label>

    <TextArea fx:id="outputText" editable="false" layoutX="325.0" layoutY="249.0" maxHeight="30.0" maxWidth="270.0"
              minHeight="30.0" minWidth="270.0" prefHeight="30.0" prefWidth="270.0" promptText="此处将显示文件内容加密后的结果"
              wrapText="true">
        <font>
            <Font size="13.0"/>
        </font>
    </TextArea>
    <Button layoutX="356.0" layoutY="348.0" mnemonicParsing="false" onAction="#btnEncryptClick" prefHeight="30.0"
            prefWidth="80.0" text="加密">
        <font>
            <Font name="Sarasa UI SC Bold" size="13.0"/>
        </font>
    </Button>
    <TextArea fx:id="fileInArea" editable="false" layoutX="325.0" layoutY="117.0" prefHeight="66.0" prefWidth="270.0"
              promptText="此处将显示您打开的文件的内容" wrapText="true">
        <font>
            <Font size="13.0"/>
        </font>
    </TextArea>

</AnchorPane>
